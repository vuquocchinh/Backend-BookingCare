<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>get crud</title>
        <link
            rel="stylesheet"
            href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
            integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
            crossorigin="anonymous"
        />
        <style>
            .table-container {
                margin: 10px 10px;
                border: 1px solid #000;
            }
            .btn-edit,
            .btn-delete {
                text-decoration: none;
                color: #000;
                border: 2px solid;
                padding: 5px 10px;
                background-color: #edebeb;
                border-radius: 25px;
                min-width: 70px;
                display: inline-block;
                text-align: center;
            }
            .btn-edit:hover,
            .btn-delete:hover {
                text-decoration: none;
                color: red;
            }
        </style>
    </head>
    <body>
        <table className="table table-hover table-container">
            <thead>
                <tr>
                    <th scope="col">email</th>
                    <th scope="col">LastName</th>
                    <th scope="col">FirstName</th>
                    <th scope="col">Address</th>
                    <th scope="col">Phone</th>
                    <th scope="col">Gender</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                <% for(var i=0; i < dataTable.length; i++) { %>
                <tr>
                    <td><%= dataTable[i].email %></td>
                    <td><%= dataTable[i].lastName %></td>
                    <td><%= dataTable[i].firstName %></td>
                    <td><%= dataTable[i].address %></td>
                    <td><%= dataTable[i].phonenumber %></td>
                    <td><%= dataTable[i].gender %></td>
                    <td>
                        <a
                            href="/edit-crud?id=<%= dataTable[i].id %>"
                            className="btn-edit"
                            >Edit</a
                        >
                        <a
                            href="/delete-crud?id=<%= dataTable[i].id %>"
                            className="btn-delete"
                            >Delete</a
                        >
                    </td>
                </tr>
                <% } %>
            </tbody>
        </table>
    </body>
</html>
